<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 软件标题 -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:layout_gravity="center"
        android:textSize="24sp" />

    <!-- 显示区域 -->
    <TextView
        android:id="@+id/calculator_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="end"
        android:padding="16dp"
        android:layout_marginVertical="20sp"
        android:background="#f0f0f0"
        android:text="@string/default_calc_value" />

    <!-- 按钮布局 -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- 第一行按钮：7, 8, 9, / -->
        <TableRow style="?android:attr/buttonBarStyle">
            <Button
                android:id="@+id/button_num_7"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="7" />
            <Button
                android:id="@+id/button_num_8"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="8" />
            <Button
                android:id="@+id/button_num_9"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="9" />
            <Button
                android:id="@+id/button_op_div"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="/" />
        </TableRow>

        <!-- 第二行按钮：4, 5, 6, * -->
        <TableRow style="?android:attr/buttonBarStyle">
            <Button
                android:id="@+id/button_num_4"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="4" />
            <Button
                android:id="@+id/button_num_5"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="5" />
            <Button
                android:id="@+id/button_num_6"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="6" />
            <Button
                android:id="@+id/button_op_mul"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="*" />
        </TableRow>

        <!-- 第三行按钮：1, 2, 3, - -->
        <TableRow style="?android:attr/buttonBarStyle">
            <Button
                android:id="@+id/button_num_1"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="1" />
            <Button
                android:id="@+id/button_num_2"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="2" />
            <Button
                android:id="@+id/button_num_3"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="3" />
            <Button
                android:id="@+id/button_op_sub"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="-" />
        </TableRow>

        <!-- 第四行按钮：0, ., =, + -->
        <TableRow style="?android:attr/buttonBarStyle">
            <Button
                android:id="@+id/button_num_0"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="0" />
            <Button
                android:id="@+id/button_decimal"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="." />
            <Button
                android:id="@+id/button_equal"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="=" />
            <Button
                android:id="@+id/button_op_add"
                style="?android:attr/buttonBarButtonStyle"
                android:textSize="24sp"
                android:text="+" />
        </TableRow>

        <!-- 清除按钮 -->
        <TableRow style="?android:attr/buttonBarStyle">
            <Button
                android:id="@+id/button_clear"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_span="2"
                android:textSize="24sp"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:layout_marginHorizontal="12sp"
                android:text="C" />
            <Button
                android:id="@+id/button_all_clear"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_span="2"
                android:textSize="24sp"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:layout_marginHorizontal="12sp"
                android:text="AC" />
        </TableRow>
    </TableLayout>
</LinearLayout>